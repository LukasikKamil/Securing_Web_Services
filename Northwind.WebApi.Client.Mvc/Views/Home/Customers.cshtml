@using ALLinONE.Shared
@model IEnumerable<Customer>?
@{
    ViewData["Title"] = "Customers using .NET";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div>
        @*Go to <a href="/">Products using JavaScript</a>*@
    </div>
    <form action="/home/customers">
        <input name="name" placeholder="Enter part of a customer name" />
        <input type="submit" value="Get Customers" />
    </form>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Customer Name</th>
                </tr>
            </thead>
            <tbody>
                @if(Model is not null)
                {
                    @foreach(Customer c in Model)
                    {
                        <tr><td><a href="@(ViewData["baseaddress"])api/customers/@c.CustomerId">@c.CompanyName</a></td></tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
